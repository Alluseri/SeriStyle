{
	"manifest_version": 3,
	"name": "SeriStyle",
	"author": "Nekoseri",
	"version": "1.8.0",
	"description": "Bring back the early-2021 UI back to YouTube! (Firefox Build)",
	"icons": {
		"16": "icons/default16.png",
		"32": "icons/default32.png",
		"48": "icons/default48.png",
		"64": "icons/default64.png",
		"128": "icons/default128.png"
	},
	"action": {
		"default_popup": "/html/popup.html"
	},
	"incognito": "spanning",
	"permissions": [
		"tabs",
		"storage",
		"activeTab",
		"scripting"
	],
	"host_permissions": [
		"*://*.youtube.com/*"
	],
	"background": {
		"scripts": [
			"bgworker.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/*"
			],
			"js": [
				"/scripts/defaults.js",
				"/scripts/server.js"
			],
			"run_at": "document_end"
		}
	]
}