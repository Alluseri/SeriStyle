{
	"manifest_version": 3,
	"name": "SeriStyle",
	"author": "Nekoseri",
	"version": "1.9.0",
	"description": "Bring the early-2021 UI back to YouTube!",
	"icons": {
		"16": "icons/default16.png",
		"32": "icons/default32.png",
		"48": "icons/default48.png",
		"64": "icons/default64.png",
		"128": "icons/default128.png"
	},
	"action": {
		"default_popup": "/html/popup.html"
	},
	"incognito": "spanning",
	"permissions": [
		"tabs",
		"storage",
		"scripting"
	],
	"host_permissions": [
		"*://*.youtube.com/*"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "totally@real-email.com",
			"update_url": "https://raw.githubusercontent.com/Alluseri/SeriStyle/main/update.firefox.json"
		}
	},
	"background": {
		"scripts": [
			"bgworker.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/*"
			],
			"js": [
				"/scripts/defaults.js",
				"/scripts/server.js"
			],
			"run_at": "document_end"
		}
	]
}